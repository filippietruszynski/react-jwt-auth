{
  "name": "react-jwt-auth",
  "version": "0.1.0",
  "private": true,
  "description": "A single-page React application implementing a user authentication system using Redux Toolkit for state management and JSON Web Tokens (JWT) for secure authentication and session handling.",
  "keywords": [
    "react",
    "redux",
    "redux-toolkit",
    "jwt",
    "authentication",
    "session-handling"
  ],
  "license": "MIT",
  "author": {
    "name": "Filip Pietruszy≈Ñski",
    "email": "filippietruszynski@pm.me",
    "url": "https://github.com/filippietruszynski"
  },
  "scripts": {
    "start": "webpack serve --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx --quiet --ignore-path ./.gitignore",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"./**/*.{js,jsx,ts,tsx,css,md,json}\" --loglevel warn --ignore-path ./.gitignore",
    "prettier:write": "npm run prettier -- --write",
    "code-format": "npm run prettier:write && npm run lint:fix",
    "type-check": "tsc --pretty --noEmit"
