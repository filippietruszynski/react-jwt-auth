    "prettier": "^2.8.8",
    "react-refresh": "^0.14.0",
    "typescript": "^5.0.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
